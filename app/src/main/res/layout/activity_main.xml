<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back2"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/sInput"

            android:layout_width="300dp"
            android:layout_height="30dp"
            android:background="@color/white"/>



        <ImageView
            android:id="@+id/sSearch"
            android:layout_marginTop="3dp"
            android:layout_width="40dp"
            android:layout_marginLeft="3dp"
            android:layout_height="30dp"
            android:src="@drawable/search2"/>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/location"/>

        <TextView
            android:id="@+id/sCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="Dinajpur"
            android:textColor="@color/white"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sTimeZone"
            android:layout_marginLeft="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#D5D1D1"
            android:text="Sun 1 November 2.01PM "/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

      <ImageView
          android:layout_width="90dp"
          android:layout_height="60dp"
          android:src="@drawable/weathericon"/>

        <TextView
            android:id="@+id/sTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27\u00B0"
            android:textSize="60sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Feels like "
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/sFeelLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEMP"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:textSize="16dp"> </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center">

       <TextView
           android:id="@+id/sWeather"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Cloudy"
           android:textColor="@color/white"
           android:textSize="20dp"
           android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yesterday: 34\u00B0/26\u00B0 "
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="200dp"

             />

    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_margin="30dp"

        app:cardBackgroundColor="#B5E5EC"
        app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="159dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:src="@drawable/raindrop" />

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:orientation="vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Participation"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="10%"/>
           </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"

            android:layout_marginTop="30dp"
            android:background="@color/black"/>
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sunuv2"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UV Index"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Low"/>
            </LinearLayout>


        </LinearLayout>





    </LinearLayout>






    </androidx.cardview.widget.CardView>


</LinearLayout>